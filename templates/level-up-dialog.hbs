                <button type="button" class="stat-decrease" data-stat="prd">-</button>
                <span class="stat-value" data-stat="prd">{{abilities.prd.value}}</span>
                <button type="button" class="stat-increase" data-stat="prd">+</button>
            </div>
        </div>
        <div class="separadores">
            <img class="dice-icon" src="{{asset 'assets/Images/Die_Bg.png'}}" alt="2d6 Dice" width="32" height="32"/>
            <div class="separadores2">
                <button type="button" class="stat-decrease" data-stat="jst">-</button>
                <span class="stat-value" data-stat="jst">{{abilities.jst.value}}</span>
                <button type="button" class="stat-increase" data-stat="jst">+</button>
            </div>
        </div>
        <div class="separadores">
            <img class="dice-icon" src="{{asset 'assets/Images/Die_Bg.png'}}" alt="2d6 Dice" width="32" height="32"/>
            <div class="separadores2">
                <button type="button" class="stat-decrease" data-stat="chr">-</button>
                <span class="stat-value" data-stat="chr">{{abilities.chr.value}}</span>
                <button type="button" class="stat-increase" data-stat="chr">+</button>
