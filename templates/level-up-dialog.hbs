            <div class="separadores2">
                <button type="button" class="stat-decrease" data-stat="tmp">-</button>
                <span class="stat-value" data-stat="tmp">{{abilities.tmp.value}}</span>
                <button type="button" class="stat-increase" data-stat="tmp">+</button>
            </div>
        </div>
    </div>

</form>
