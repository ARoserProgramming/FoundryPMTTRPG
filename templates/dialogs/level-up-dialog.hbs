                <button type="button" class="stat-decrease button-icon" data-stat="ftd"><img src="{{asset 'assets/imgs/-_icon.png'}}" alt=""></button>
                <span class="stat-value" data-stat="ftd">{{abilities.ftd.value}}</span>
                <button type="button" class="stat-increase button-icon" data-stat="ftd"><img src="{{asset 'assets/imgs/+_icon.png'}}" alt=""></button>
            </div>
        </div>
